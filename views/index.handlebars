<div class="hero">
  <h1 class="display-4">Welcome to the Burger Shop!</h1>
  <p class="lead">Ready to eat some delicious burgers?</p>
  <br>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
        <p class="createdBurger">Created Burgers:</p>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li class="addedBurgers">
                <p>
                    {{> burgers/burger-block devoured=false}}
                </p>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
        </div>

        <div class="col-lg-6">
           <p class="devouredBurger">Devoured Burgers:</p> 
           <ul>
               {{#each burgers}}
               {{#if devoured}}
               <li class="eatenBurger">
                   <p>
                       {{> burgers/burger-block2 devoured=true}}
                   </p>
               </li>
        {{/if}}
      {{/each}}
           </ul>
        </div>
    </div>
</div>

<div class="formBackground">

    <h2 class="formHeader">Add a Burger you'd like to eat!</h2>

    <form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>
  <button type="submit">Add Burger</button>
</div>

</div>